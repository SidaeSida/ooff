// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// 1. NextAuth Models + SNS 확장
// --------------------------------------

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // 닉네임 (고유값)
  nickname      String?   @unique
  
  // 소셜 로그인은 비번이 없으므로 Optional
  passwordHash  String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt

  accounts      Account[]
  sessions      Session[]
  
  // [수정] 팔로우 시스템 (명시적 관계 - Follows 모델 참조)
  // followedBy: 나를 팔로우하는 관계들 (Followers)
  followedBy    Follows[] @relation("following")
  // following: 내가 팔로우하는 관계들 (Following)
  following     Follows[] @relation("follower")
  
  // 기존 데이터 관계 유지
  UserEntry         UserEntry[]
  UserPrivacy       UserPrivacy?
  FavoriteScreening FavoriteScreening[]
}

// [추가] 팔로우 관계 테이블 (명시적 모델)
// 유저가 삭제되면 이 관계 데이터도 즉시 삭제됨 (Cascade)
model Follows {
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  // follower: 팔로우를 '하는' 사람
  follower    User @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  // following: 팔로우를 '받는' 사람
  following   User @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId]) // 복합 키
  @@index([followerId])
  @@index([followingId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // 유저 삭제 시 계정 정보 삭제
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  // 유저 삭제 시 세션 삭제
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
  
  @@unique([identifier, token])
}

// --------------------------------------
// 2. OOFF Project Models
// --------------------------------------

enum Visibility {
  private
  friends
  public
}

model UserEntry {
  id          String   @id @default(cuid())
  userId      String
  filmId      String
  rating      Decimal? @db.Decimal(2, 1)
  shortReview String?  @db.VarChar(200)
  isStarred   Boolean  @default(false)
  visibility  Visibility @default(private) // (참고: 기본값을 public으로 바꾸셨다면 수정 필요)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 유저 삭제 시 평점/리뷰 삭제
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, filmId])
  @@index([userId])
  @@index([filmId])
}

model UserPrivacy {
  userId           String     @id
  ratingVisibility Visibility @default(public)
  reviewVisibility Visibility @default(public)
  updatedAt        DateTime   @updatedAt

  // 유저 삭제 시 설정 삭제
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FavoriteScreening {
  id          String   @id @default(cuid())
  userId      String
  screeningId String
  priority    Int?
  sortOrder   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // 유저 삭제 시 즐겨찾기 삭제
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, screeningId])
  @@index([userId])
  @@index([screeningId])
}