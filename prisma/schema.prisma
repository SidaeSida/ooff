// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}

model LoginAttempt {
  email       String   @id
  failCount   Int      @default(0)
  lockedUntil DateTime?
  updatedAt   DateTime @updatedAt
}