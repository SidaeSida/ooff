// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// 1. NextAuth Models + SNS 확장
// --------------------------------------

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // 닉네임 (고유값)
  nickname      String?   @unique
  
  // 소셜 로그인은 비번이 없으므로 Optional
  passwordHash  String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt

  accounts      Account[]
  sessions      Session[]
  
  // 팔로우 시스템
  followedBy    Follows[] @relation("following")
  following     Follows[] @relation("follower")
  
  // [추가] 내가 누른 좋아요 (내가 주체)
  likes         Like[]

  // [추가] 차단 시스템
  blockedBy     Block[]   @relation("blockedBy") // 나를 차단한 사람들 (내가 차단 당함)
  blocking      Block[]   @relation("blocking")  // 내가 차단한 사람들 (내가 차단 함)
  
  // 기존 데이터 관계
  UserEntry         UserEntry[]
  UserPrivacy       UserPrivacy?
  FavoriteScreening FavoriteScreening[]
}

// 팔로우 관계 테이블
model Follows {
  followerId  String
  followingId String
  createdAt   DateTime @default(now())

  follower    User @relation("follower", fields: [followerId], references: [id], onDelete: Cascade)
  following   User @relation("following", fields: [followingId], references: [id], onDelete: Cascade)

  @@id([followerId, followingId])
  @@index([followerId])
  @@index([followingId])
}

// [추가] 차단 관계 테이블
model Block {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())

  // 차단 주체 (내가)
  blockerId   String
  blocker     User     @relation("blocking", fields: [blockerId], references: [id], onDelete: Cascade)

  // 차단 대상 (너를)
  blockedId   String
  blocked     User     @relation("blockedBy", fields: [blockedId], references: [id], onDelete: Cascade)

  // 중복 차단 방지 (A가 B를 두 번 차단할 수 없음)
  @@unique([blockerId, blockedId])
  @@index([blockerId])
  @@index([blockedId])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
  
  @@unique([identifier, token])
}

// --------------------------------------
// 2. OOFF Project Models
// --------------------------------------

enum Visibility {
  private
  friends
  public
}

model UserEntry {
  id          String   @id @default(cuid())
  userId      String
  filmId      String
  rating      Decimal? @db.Decimal(2, 1)
  shortReview String?  @db.VarChar(200)
  isStarred   Boolean  @default(false)
  visibility  Visibility @default(private)
  
  // [추가] 좋아요 개수 (성능 최적화용 필드)
  // 해당 한줄평이 받은 좋아요의 총 개수
  likeCount   Int      @default(0)

  // [추가] 이 한줄평에 달린 좋아요 데이터들
  likes       Like[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, filmId])
  @@index([userId])
  @@index([filmId])
}

// [추가] 좋아요 테이블
model Like {
  id          String    @id @default(cuid())
  createdAt   DateTime  @default(now())

  // 좋아요 누른 사람
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  // 좋아요 눌린 한줄평(UserEntry)
  userEntryId String
  userEntry   UserEntry @relation(fields: [userEntryId], references: [id], onDelete: Cascade)

  // 한 유저가 한 글에 중복 좋아요 방지
  @@unique([userId, userEntryId])
  @@index([userId])
  @@index([userEntryId])
}

model UserPrivacy {
  userId           String     @id
  ratingVisibility Visibility @default(public)
  reviewVisibility Visibility @default(public)
  updatedAt        DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FavoriteScreening {
  id          String   @id @default(cuid())
  userId      String
  screeningId String
  priority    Int?
  sortOrder   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, screeningId])
  @@index([userId])
  @@index([screeningId])
}