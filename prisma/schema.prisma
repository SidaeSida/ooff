// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --------------------------------------
// 1. NextAuth Models + SNS 확장
// --------------------------------------

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  
  // [New] 닉네임 (고유값)
  nickname      String?   @unique
  
  // 소셜 로그인은 비번이 없으므로 Optional
  passwordHash  String?
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @default(now()) @updatedAt

  accounts      Account[]
  sessions      Session[]
  
  // [New] 팔로우 시스템 (Self-Relation)
  // followedBy: 나를 팔로우하는 사람들 (Followers)
  followedBy    User[]    @relation("UserFollows")
  // following: 내가 팔로우하는 사람들 (Following)
  following     User[]    @relation("UserFollows")
  
  // 기존 데이터 관계 유지
  UserEntry         UserEntry[]
  UserPrivacy       UserPrivacy?
  FavoriteScreening FavoriteScreening[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}

// --------------------------------------
// 2. OOFF Project Models (기존 유지)
// --------------------------------------

enum Visibility {
  private
  friends
  public
}

model UserEntry {
  id          String     @id @default(cuid())
  userId      String
  filmId      String
  rating      Decimal?   @db.Decimal(2, 1)
  shortReview String?    @db.VarChar(200)
  isStarred   Boolean    @default(false)
  visibility  Visibility @default(private)
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, filmId])
  @@index([userId])
  @@index([filmId])
}

model UserPrivacy {
  userId           String     @id
  ratingVisibility Visibility @default(public)
  reviewVisibility Visibility @default(public)
  updatedAt        DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FavoriteScreening {
  id          String @id @default(cuid())
  userId      String
  screeningId String
  priority    Int?
  sortOrder   Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, screeningId])
  @@index([userId])
  @@index([screeningId])
}