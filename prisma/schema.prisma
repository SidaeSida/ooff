// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"      // ← 여기를 postgresql 로
  url      = env("DATABASE_URL")
}

/* 기존 모델들 그대로 유지
model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
}
